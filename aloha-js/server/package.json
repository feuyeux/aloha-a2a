{
    "name": "aloha-js-server",
    "version": "1.0.0",
    "description": "JavaScript/TypeScript server implementation with multi-transport support",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "test": "vitest --run",
        "lint": "eslint src/",
        "format": "prettier --write src/"
    },
    "keywords": [
        "a2a",
        "agent",
        "multi-transport"
    ],
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {
        "@a2a-js/sdk": "^0.3.10",
        "@bufbuild/protobuf": "^2.11.0",
        "@grpc/grpc-js": "^1.14.3",
        "@grpc/proto-loader": "^0.8.0",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "ollama": "^0.6.2",
        "uuid": "^13.0.0",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/node": "^25.0.2",
        "@types/uuid": "^11.0.0",
        "@types/ws": "^8.5.13",
        "eslint": "^10.0.0",
        "prettier": "^3.4.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vitest": "^4.0.7"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
